@echo off

REM replace <> with your content
set logPath=<log directory>
set scriptPath=<bash script location in order to init it>

REM It is better to remove manually the old backup , in order to avoid deleting backup 
REM that should not be deleted

REM Clean all previous log they are not needed
del %logPath%\bck_*.log

echo Starting the connection to the remote server
echo It is prefered to empty the recycle bin for space before starting!
echo Press any key to continue (Ctrl+C to abort) ... 
pause > nul 

start /b winscp.com /ini=nul /script=%scriptPath%\Batch_Server_Local.txt /log=%logPath%\bck_something.log

exit /b
